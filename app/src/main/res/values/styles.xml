<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">true</item>
    </style>

    <style name="rounded_button" parent="android:Widget.Button">

        <item name="android:layout_width">@dimen/button_width</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:background">@drawable/rounded_rect_button</item>
        <item name="android:backgroundTint">@color/colorAccent</item>
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:textSize">20sp</item>

    </style>

    <style name="rounded_button_with_border" parent="android:Widget.Button">

        <item name="android:layout_width">@dimen/button_width</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:background">@drawable/rounded_rect_button_border</item>
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>

    </style>

    <style name="edit_text_style" parent="android:Widget.EditText" >

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/input_text_height</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:background">@drawable/rounded_rect_button</item>
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:shadowColor">@color/colorAccent</item>
        <item name="android:textColor">@color/dark_pink</item>
        <item name="android:textColorHint">@color/dark_pink</item>
        <item name="android:textSize">18sp</item>

    </style>

    <style name="progress_dialog_style" parent="android:Theme.DeviceDefault.Dialog">

        <item name="DialogTitleAppearance">@android:style/TextAppearance.Medium</item>
        <item name="DialogSpotColor">@color/colorPrimaryDark</item>
        <item name="android:background">@drawable/rounded_rect_button</item>
        <item name="DialogSpotCount">5</item>

    </style>


</resources>
